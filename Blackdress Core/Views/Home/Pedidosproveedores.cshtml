    <input type="hidden" name="proveedores" value="@ViewBag.nombreprov" />
    <input type="hidden" name="descripcion" value="@ViewBag.descripcion" />
    <input type="hidden" name="precioU" value="@ViewBag.precioUnitario" />
    <input type="hidden" name="cantidad" value="@ViewBag.cantidad" />
    <input type="hidden" name="iva" value="@ViewBag.iva" />
    <input type="hidden" name="totalapagar" value="@ViewBag.total" />
    <input type="hidden" name="nrodeguia" value="@ViewBag.gd" />
    <input type="hidden" name="nombreprod" value="@ViewBag.nombreproducto" />
    <input type="hidden" name="color" value="@ViewBag.color" />
    <input type="submit" value="GenerarPedido" />
</form>



