<h1 class="h1">Bodega</h1>
<br>
<form method="post" action="/AdministracionStock/registrarPedido">
    <label>Numero guia de despacho</label>
    <input type="text" name="nrodeguia" maxlength="100" required/>
    <br>
    <label>Rut proveedor</label>
    <input type="text" name="rutproveedor" maxlength="10" required>
    <br>
    <label>Nombre proveedor</label>
    <input type="text" name="nombreproveedor" maxlength="35" required/>
    <br>
    <label>descripcion</label>
    <input type="text" name="descripcion" maxlength="200" required/>
    <br>
    <label>Nombre producto</label>
    <input type="text" name="nombreprod"  maxlength="50" required/><br>
   <label>Color</label>
    <input type="text" name="color" maxlength="50" required/><br>
    <label>Cantidad</label>
    <input type="number" name="cantidad" required/><br>
    <input type="submit" value="recepcionar" />
</form>
<br>
<table border="1">
    <tr border ="1">
        <td>Nombre Material</td>
        <td>Color</td>
        <td>Stock</td>
    </tr>
    @Html.Raw(ViewBag.stock)
</table>
<br>
<form method="post" action="/AdministracionStock/updateStock" class="input-group-prepend">
    <input type="hidden" name="nombreprod" value="@ViewBag.nombreproducto" />
    <input type="hidden" name="color" value="@ViewBag.color" />
    <input type="hidden" name="cantidad" value="@ViewBag.cantidad" />
    <input type="submit" value="Actualizar Stock" />
</form>

<form method="get" action="/AdministracionStock/MostrarStock">
    <input type="submit" value="Mostrar Stock" />
</form>
