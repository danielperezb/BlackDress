<form method="post" action="/AdministracionStock/registrarPedido">

    <hr/>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <label>Numero guia de despacho</label>
                <input type="text" class="form-control w-75  mb-3" name="nrodeguia" maxlength="100" required />
            </div>
            <div class="col-md-6">
                <label>Rut proveedor</label>
                <input type="text" class="form-control w-75  mb-3" name="rutproveedor" maxlength="10" required>
            </div>

            <div class="col-md-6">
                <label>Nombre proveedor</label>
                <input type="text" class="form-control w-75  mb-3" name="nombreproveedor" maxlength="35" required />
            </div>


            <div class="col-md-6">
                <label>Nombre producto</label>
                <input type="text" class="form-control w-75  mb-3" name="nombreprod" maxlength="50" required /><br>

            </div>
            <div class="col-md-6">
                <label>Color</label>
                <input type="text" class="form-control w-75  mb-3" name="color" maxlength="50" required /><br>

            </div>
            <div class="col-md-6">
                <label>Cantidad</label>
                <input type="number" class="form-control w-75  mb-3" name="cantidad" required /><br>

            </div>

            <div class="col-md-12">
                <label>descripcion</label>
                <textarea class="form-control" name="descripcion" maxlength="200" required rows="3" /></textarea>
            </div>
        </div>
    </div>
    <div class="col text-center">
        <button type="submit" class="btn btn-primary btn-lg m-3 cen">Recepcionar </button>
    </div>

</form>
<br>
<hr />
<div class="row justify-content-center">
    <table class="table-secondary table-bordered text-center "  border="1">
        <tr class="table-primary" border="1">
            <td>Nombre Material</td>
            <td>Color</td>
            <td>Stock</td>
        </tr>
        @Html.Raw(ViewBag.stock)
    </table>
    </div>
    <br>
    <form method="post" action="/AdministracionStock/updateStock" class="input-group-prepend">
        <input type="hidden" name="nombreprod" value="@ViewBag.nombreproducto" />
        <input type="hidden" name="color" value="@ViewBag.color" />
        <input type="hidden" name="cantidad" value="@ViewBag.cantidad" />
        <button type="submit" class="btn btn-primary btn-lg m-3 cen">Actualizar stok </button>
    </form>

    <form method="get" action="/AdministracionStock/MostrarStock">
        <button type="submit" class="btn btn-primary btn-lg m-3 cen">Mostrar stok</button>
    </form>
