
@{
    ViewData["Title"] = "registrarse";
}
<script type="text/javascript">
    var resp1 = "@ViewBag.mensaje";
    var resp2 = "@ViewBag.state";
    var sw = "@ViewBag.sw";
    if (sw=="OK") {
        alert(sw + " - " + resp1 + " - " + resp2);
    }
    else
    {
        alert("No se ha podido Registrar usuario, Rut incorrecto");
    }
</script>
<h1 class="h1 text-center" >Registrarse</h1>
<h2 style="color: blue; font-family: 'Comic Sans MS'; animation-duration: initial; background-color: black;">@ViewBag.state @ViewBag.mensaje</h2>
<hr />
<form method="post" action="/indice/register">
    <div>
        <label>E-mail: </label>
        <input type="email" class="form-control w-75  mb-3" name="mail" required max="50" id="mail" />
        
        <label>Nombre de usuario: </label>
        <input type="text" class="form-control w-75  mb-3" name="user" required max="20" id="user" />
        
        <label>Nombre Y Apellido: </label>
        <input type="text" class="form-control w-75  mb-3" name="apellido" required max="50" id="apellido" />
        
        <label>Rut:</label>
        <input type="text" class="form-control w-75  mb-3" placeholder="11111111-1" name="rut" required maxlength="10" id="rut" />
        
        <label>Contraseña: </label>
        <input type="password" class="form-control w-75  mb-5" required max="8" name="pass" maxlength="8" id="password" />
      
        <input type="submit" class="btn btn-info" value="Registrarse" />
        </div>
</form>

