<!--formulario para cotizar producto-->
<form method="post" action="/CarritoCompra/agregaralcarrito">
    <input type="text" name="nombre_producto" value="Susuya jacket Lolita" readonly />
    <p>Precio</p>
    <input type="number" name="precio" value="57990" readonly />
    <p>Tamaño</p>
    <input type="text" placeholder="que talla eres?" name="talla" value="" required />
    <p>color</p>
    <input type="text" placeholder="White or Black" name="color" required>
    <br>
    <p>Informacion adicional</p>
    <input type="text" name="medidasCorporales" placeholder="Short version or Long version" required />
    <br>
    <p>Costos de envio: RM: $7.990, Regiones: 15.990</p>
    <br>
    <p>Entrega:</p>
    <br>
    <p>15 dias habiles</p>
    <input type="submit" class="btn btn-success" value="Agregar al carrito">
</form>

